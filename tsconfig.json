{
    "compilerOptions": {
        "lib": [
            "dom",
            "es7"
          ],
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,              
        "baseUrl": ".",
        "paths": {
                "*": [ "./*" ],
                "src/*": ["./test/*"]
            }
    },
    "include": [
        "./test/**/*.ts"
    ],
    "exclude": [
      "./node_modules"
    ],
    "compileOnSave": false
}